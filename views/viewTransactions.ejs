<style>
  body {
    font-family: Arial, sans-serif;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th, td {
    border: 1px solid black;
    padding: 8px;
    text-align: left;
  }

  thead {
    background-color: cornflowerblue;
    color: white;
  }

  tbody {
    font-size: 9pt;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  tr:hover {
    background-color: #d9edf7;
  }
</style>

<label><b>User Information:</b></label>
<br><br>
<table style="width: 100%; background-color: antiquewhite; border: 1px solid black;">
  <thead style="background-color: cornflowerblue; color: white;">
    <tr>
      <th style="text-align: left;">Type</th>
      <th style="text-align: left;">Amount</th>
    </tr>
  </thead>
  <tbody style="font-family: Arial; font-size: 9pt;">
   <% for (let iCount = 0; iCount < myuser.length; iCount++) { %>
      <tr>
        <td><%= myuser[iCount].transaction_category %></td>
        <td><%= myuser[iCount].amount %></td>
      </tr>
   <% } %>